{
  "manifest_version": 3,
  "name": "NewsOwl ",
  "version": "1.0.0",
  "description": "A friendly Chrome extension that provides instant fact-checking and bias detection when you highlight text.",
  "permissions": [
    "activeTab",
    "storage",
    "contextMenus",
    "sidePanel",
    "identity"
  ],
  "host_permissions": [
    "https://majb2cj4m6.execute-api.ap-southeast-1.amazonaws.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.channelnewsasia.com/*",
        "*://*.malaysiakini.com/*",
        "*://*.thestar.com.my/*",
        "*://*.freemalaysiatoday.com/*",
        "*://*.malaymail.com/*",
        "*://*.nst.com.my/*",
        "*://*.theedgemarkets.com/*",
        "*://*.thesundaily.my/*",
        "*://*.thevibes.com/*",
        "*://*.malaysianow.com/*",
        "*://*.theborneopost.com/*",

        "*://*.nytimes.com/*",
        "*://*.cnn.com/*",
        "*://*.reuters.com/*",
        "*://*.wsj.com/*",
        "*://*.bbc.com/*",
        "*://*.npr.org/*",
        "*://news.google.com/*",
        "*://*.foxnews.com/*",
        "*://*.nbcnews.com/*",
        "*://*.washingtonpost.com/*",

        "*://*.facebook.com/*",
        "*://*.twitter.com/*",
        "*://*.x.com/*",
        "*://*.instagram.com/*",
        "*://*.youtube.com/*",
        "*://*.reddit.com/*"
      ],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "NewsOwl"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/Untitled_design_2.png",
    "48": "icons/Untitled_design_2.png",
    "128": "icons/Untitled_design_2.png"
  }
}
